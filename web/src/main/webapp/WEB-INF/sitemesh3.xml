<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/main.jsp”所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/jsp/decorators/main.jsp"/>
    <!-- 指明满足“/activity*”的页面，将被排除，不被装饰 -->
    <mapping path="/index.jsp" exclue="true"/>
    <mapping path="/login" exclue="true"/>
</sitemesh>